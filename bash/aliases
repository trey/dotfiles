alias h=history
alias tu="top -o cpu" # CPU
alias tm="top -o vsize" # memory
alias ra="source ~/bin/dotfiles/bash/aliases" # reload aliases
alias ea="subl -w ~/bin/dotfiles/bash/aliases && ra" # edit aliases
alias cdtm="cd ~/'Library/Application Support/Avian/Bundles/'"
alias retm="osascript -e 'tell app \"TextMate\" to reload bundles'"
alias cdsp="cd `python -c 'from distutils.sysconfig import get_python_lib; print get_python_lib()'`"
alias gst="git status -sb"
function take() {
	mkdir $1
	cd $1
}

#Django
alias dj="./manage.py runserver"
alias djreset="rm dev.db; ./manage.py syncdb --noinput; ./manage.py loaddata auth auth.json"
alias djemail="python -m smtpd -n -c DebuggingServer localhost:1025"

# Recursive Deleting
alias delpyc="find . -name '*.pyc' -print0|xargs -0 rm"
function delsvn() {
	while true; do
		read -p "Are you sure? " yn
		case $yn in
			[Yy]* ) rm -rf `find . -type d -name .svn`; break;;
			[Nn]* ) break;;
			* ) echo "Please answer yes or no.";;
		esac
	done
}
