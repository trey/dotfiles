alias h=history
alias tu="top -o cpu"   # CPU
alias tm="top -o vsize" # memory
alias ra="source ~/bin/dotfiles/bash/aliases" # reload aliases
alias ea="mate -w ~/bin/dotfiles/bash/aliases && ra" # edit aliases
alias cdtm="cd ~/'Library/Application Support/TextMate/Bundles/'"
alias retm="osascript -e 'tell app \"TextMate\" to reload bundles'"
alias cdsp="cd /Library/Python/2.6/site-packages/"
function take() {
	mkdir $1
	cd $1
}
function template() {
	if [[ $1 != '' ]] ; then
		mkdir $1
		cd $1
		cp ~/Webs/site-template/html5.html ./index.html
		echo ""
		echo "copied $1/index.html ..."
		cp ~/Webs/site-template/.htaccess .
		echo "copied $1/.htaccess ..."
		cp ~/Webs/site-template/robots.txt .
		echo "copied $1/robots.txt ..."
		cp -R ~/Webs/site-template/css .
		echo "copied $1/css/ ..."
		cp -R ~/Webs/site-template/js .
		echo "copied $1/js/ ..."
		cp -R ~/Webs/site-template/img .
		echo "copied $1/img/ ..."
		echo ""
		echo "Success!"
	else
		echo "usage: template directory"
	fi
}

#Django
alias dj="./manage.py runserver"
alias djreset="rm dev.db; ./manage.py syncdb --noinput; ./manage.py loaddata auth auth.json"

# Recursive Deleting
alias delpyc="find . -name '*.pyc' -print0|xargs -0 rm"
function delsvn() {
	while true; do
		read -p "Are you sure? " yn
		case $yn in
			[Yy]* ) rm -rf `find . -type d -name .svn`; break;;
			[Nn]* ) break;;
			* ) echo "Please answer yes or no.";;
		esac
	done
}

