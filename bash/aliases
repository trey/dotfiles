alias h=history
alias tu="top -o cpu"   # CPU
alias tm="top -o vsize" # memory
alias ra="source ~/bin/dotfiles/bash/aliases" # reload aliases
alias ea="mate -w ~/bin/dotfiles/bash/aliases && ra" # edit aliases
alias cdtm="cd ~/'Library/Application Support/TextMate/Bundles/'"
alias retm="osascript -e 'tell app \"TextMate\" to reload bundles'"
alias cdsp="cd /Library/Python/2.5/site-packages/"
function take() {
	mkdir $1
	cd $1
}

#Django
alias dj="./manage.py runserver"
alias djreset="rm dev.db; ./manage.py syncdb --noinput; ./manage.py loaddata auth auth.json"

# Recursive Deleting
alias delpyc="find . -name '*.pyc' -print0|xargs -0 rm"
alias delsvn="rm -rf \`find . -type d -name .svn\`"

# App Engine
alias aeu="appcfg.py update ."
alias aed="dev_appserver.py ."

# Git
alias gst="git status"
alias gl="git pull"
alias gp="git push"
alias gd="git diff | mate"
alias gc="git commit -v"
alias gca="git commit -v -a"
alias gb="git branch"
alias gba="git branch -a"
alias gcm="git commit -a -m"
alias gx="git log --pretty=oneline --graph --all --abbrev-commit" # GitX style on the command line
function gbt () {
	# Setup a tracking branch from [remote] [branch_name]
	git branch --track $2 $1/$2
	git checkout $2
}
