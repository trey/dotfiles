[user]
	name = Your Name
	email = you@example.com
[alias]
	co = checkout
	l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
	amen = commit --amend -C HEAD
	undo = reset --soft HEAD^
	who = shortlog -sn
[color]
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[apply]
	whitespace = nowarn
[core]
	excludesfile = "~/.gitexcludes"
